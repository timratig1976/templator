{
  "name": "windsurf-mvp",
  "version": "0.1.0",
  "description": "MVP tool to convert screen designs to HTML+Tailwind and generate HubSpot modules",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "bash ./dev-start.sh",
    "dev:backend": "cd backend && PORT=3009 npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "restart": "lsof -ti:3000,3009 | xargs kill -9 2>/dev/null || true && sleep 1 && bash ./dev-start.sh",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && PORT=3009 npm run start",
    "start:frontend": "cd frontend && npm run start",
    "start:production": "concurrently \"npm run start:backend\" \"cd frontend && next start -p 3000\"",
    "test": "npm run test --workspaces",
    "test:all": "npm run test --workspaces",
    "test:backend": "npm -w backend run test",
    "test:frontend": "npm -w frontend run test",
    "test:unit": "npm -w backend run test:unit",
    "test:integration": "npm -w backend run test:integration",
    "test:e2e": "npm -w backend run test:e2e",
    "test:contracts": "npm -w backend run test:contracts",
    "test:pyramid": "npm -w backend run test:pyramid",
    "test:coverage:backend": "npm -w backend run test:coverage",
    "test:coverage:frontend": "npm -w frontend run test:coverage",
    "test:coverage:all": "npm -w backend run test:coverage && npm -w frontend run test:coverage",
    "build-test": "npm -w backend run build-test",
    "build-test:compile": "npm -w backend run build-test:compile",
    "build-test:structure": "npm -w backend run build-test:structure",
    "build-test:discover": "npm -w backend run build-test:discover",
    "build-test:watch": "npm -w backend run build-test:watch",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf backend/dist frontend/.next reports backend.log frontend.log backend-prod.log frontend-prod.log",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.6",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "dompurify": "^3.2.6",
    "jsdom": "^26.1.0"
  }
}
