{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@backend/*": ["./src/*"],
      "@tests/*": ["../tests/backend/runner/*", "./tests/runner/*"],
      "@tests-config/*": ["../tests/backend/config/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "../tests/backend/**/*.ts"
  ]
}
