{
  "name": "windsurf-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3009 nodemon src/server.ts",
    "build": "tsc",
    "start": "PORT=3009 node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "build-test": "node scripts/build-test.js",
    "build-test:compile": "node scripts/build-test.js compile",
    "build-test:structure": "node scripts/build-test.js structure",
    "build-test:discover": "node scripts/build-test.js discover",
    "build-test:watch": "nodemon --watch src --ext ts --exec \"npm run build-test:compile\"",
    "test": "jest --config jest.simple.config.js",
    "test:watch": "jest --config jest.simple.config.js --watch",
    "test:coverage": "jest --config jest.simple.config.js --coverage",
    "test:unit": "jest --config jest.simple.config.js --testPathPattern=unit",
    "test:integration": "jest --config jest.simple.config.js --testPathPattern=integration",
    "test:e2e": "jest --config jest.simple.config.js --testPathPattern=e2e",
    "test:contracts": "jest --config jest.simple.config.js --testPathPattern=contracts",
    "test:pyramid": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "maintenance": "node scripts/maintenance.js",
    "dashboard": "node scripts/maintenance.js"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/cheerio": "^0.22.35",
    "@types/socket.io": "^3.0.1",
    "archiver": "^6.0.1",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsdom": "^23.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.104.0",
    "prisma": "^6.13.0",
    "sharp": "^0.33.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@jest/globals": "^30.0.5",
    "@types/archiver": "^6.0.2",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint-config-next": "^15.4.6",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
