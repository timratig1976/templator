{
  "testTimeout": 30000,
  "maxConcurrency": 4,
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "./test-results/coverage-validation",
  "coverageReporters": [
    "json",
    "html",
    "text"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/__tests__/setup.ts"
  ],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}